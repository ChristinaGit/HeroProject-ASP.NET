@using HeroProject.Presentation.Hero
@using HeroProject.Presentation.Hero.ViewModels
@using HeroProject.Presentation.Hero.Views
@model EditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-controller="@HeroController.Name"
      asp-action="@HeroController.Actions.Edit.Name"
      asp-antiforgery="true"
      enctype="multipart/form-data"
      method="post">
    <input asp-for="Id" type="hidden"/>

    @Html.Partial(HeroViews.Form, Model)

    <button type="submit" class="btn btn-default">Confirm</button>
</form>