@using HeroProject.Presentation.Hero.ViewModels
@model FormViewModel

<div class="form-group">
    <label asp-for="Name">Name</label>
    <div class="text-danger">
        <span asp-validation-for="Name"></span>
    </div>
    <input asp-for="Name" type="text" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Strength">Strength</label>
    <div class="text-danger">
        <span asp-validation-for="Strength"></span>
    </div>
    <input asp-for="Strength" type="number" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Dexterity">Dexterity</label>
    <div class="text-danger">
        <span asp-validation-for="Dexterity"></span>
    </div>
    <input asp-for="Dexterity" type="number" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Intelligence">Intelligence</label>
    <div class="text-danger">
        <span asp-validation-for="Intelligence"></span>
    </div>
    <input asp-for="Intelligence" type="number" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Avatar">Avatar</label>
    <div class="text-danger">
        <span asp-validation-for="Avatar"></span>
    </div>
    <input asp-for="Avatar" type="file" accept="image/jpg" class="form-control" />
</div>